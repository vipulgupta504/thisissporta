<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/webflow
http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">
 
	<var name="cart" class="com.thisissporta.SportaController" />
 	
 	<action-state id="addCartToOrder">
        <evaluate expression="cart.test()" result="cart" />
        <transition to="loginviewstate" on="true" />
        <transition to="run" on="false" />
    </action-state>
 	
	<view-state id="run" view="/WEB-INF/views/flows/page1.jsp">
		<transition to="products" on="goToproducts" />
		<transition to="goToCheckout" on="goToCheckout" />
	</view-state>
	
	<view-state id="loginviewstate" view="/WEB-INF/views/login.jsp">
		<transition to="run" on="goToCart" />		
	</view-state>
	
	<view-state id="goToCheckout" view="/WEB-INF/views/flows/page2.jsp">
		<transition to="run" on="BackToCart" />
		<transition to="ViewCompleteOrder" on="ViewCompleteOrder" />
	</view-state>
	
	<view-state id="products" view="externalRedirect:/products" />
	
	<view-state id="ViewCompleteOrder" view="/WEB-INF/views/flows/page3.jsp">
		<transition to="goToCheckout" on="BackToConfirmDetails" />
		<transition to="confirmOrder" on="confirmOrder" />
	</view-state>
	 
	 
	<end-state id="confirmOrder" view="/WEB-INF/views/flows/page4.jsp"/>
	
</flow>
